---
export interface Props {
  title: string;
  description: string;
  link?: string;
  img?: string;
  period?: string;
}
const { title, description, link, img, period } = Astro.props;
---

<li class="relative mb-10">
  <!-- ðŸ”¸ Puntico alineado a la lÃ­nea del timeline -->
  <span
    class="absolute left-0 top-6 w-3 h-3 rounded-full 
           bg-gray-200 border border-white 
           dark:bg-gray-700 dark:border-gray-900
           -translate-x-1/2"
  />

  <!-- ðŸ”¸ Contenido -->
  <div class="flex flex-col sm:flex-row items-start gap-4 ms-6">
    {img && (
      <img
        src={img}
        alt={title}
        loading="lazy"
        class="w-32 h-24 sm:w-40 sm:h-28 object-cover rounded-lg shadow border border-white/10
               transition-transform duration-300 ease-out hover:scale-120"
      />
    )}

    <div>
      <h3 class="text-lg font-semibold text-yellow-100/90">{title}</h3>
      {period && <p class="text-sm text-blue-200/80 mb-2">{period}</p>}
      <p class="mb-3 text-base text-white/70 text-pretty">{description}</p>
    </div>
  </div>
</li>
