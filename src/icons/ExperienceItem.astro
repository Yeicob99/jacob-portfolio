---
export interface Props {
  title: string;
  description: string;
  link?: string;
  img?: string;
}
const { title, description, link, img } = Astro.props;
---

<li class="relative mb-10"> {/* <-- Quita ms-6 */}
  <!-- ðŸ”¸ Puntico alineado a la lÃ­nea del timeline -->
  <span
    class="absolute left-0 top-6 w-3 h-3 rounded-full 
           bg-gray-200 border border-white 
           dark:bg-gray-700 dark:border-gray-900
           -translate-x-1/2"
  />

  <!-- ðŸ”¸ Contenido -->
  <div class="flex flex-col sm:flex-row items-start gap-4 ms-6"> {/* <-- Agrega ms-6 aquÃ­ */}
    {img && (
      <img
        src={img}
        alt={title}
        loading="lazy"
        class="w-32 h-24 sm:w-40 sm:h-28 object-cover rounded-lg shadow border border-white/10
               transition-transform duration-300 ease-out hover:scale-120"
      />
    )}

    <div>
      <h3 class="text-lg font-semibold text-yellow-100/90">{title}</h3>
      <p class="mb-3 text-base text-white/70 text-pretty">{description}</p>

      {link && (
        <a
          href={link}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-4 py-2 text-sm rounded-lg
                 bg-white/5 border border-white/10 text-slate-100
                 hover:bg-white/10 transition"
        >
          View Website
          <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
          </svg>
        </a>
      )}
    </div>
  </div>
</li>
