---
import ExperienceItem from '../icons/ExperienceItem.astro';
//frontmatter
const EXPERIENCE = [
    {
        title: 'Procuraduría General de la República Dominicana',
        description:
        'I am currently working as a web developer, contributing to internal projects and improving digital systems.',
        img: './images/desarrollador-web.png',
        period: 'July 2025 - Present',
    },
];
---

<ol class="relative border-s border-gray-200 dark:border-gray-700 ml-3">
    {
        EXPERIENCE.map(project => (
            <ExperienceItem {...project}/>
        ))
    }
</ol>
